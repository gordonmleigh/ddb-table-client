{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": false,
    "lib": ["DOM", "ES2019"],
    "module": "ES2015",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "pretty": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2019"
  },
  "exclude": ["node_modules/", "lib/", "dist/"],
  "include": ["src"]
}
